<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Signup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="mb-4">Signup</h1>
      <form action="/auth/signup" method="post" enctype="multipart/form-data">
        
        <!-- Full Name -->
        <div class="mb-3">
          <label for="fullName" class="form-label">Full Name</label>
          <input name="name" type="text" class="form-control" id="fullName" required>
        </div>

        <!-- Username -->
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input name="username" type="text" class="form-control" id="username" required>
        </div>

        <!-- Address -->
        <div class="mb-3">
          <label for="addressOfShop" class="form-label">Address of Shop</label>
          <input name="addressOfShop" type="text" class="form-control" id="addressOfShop" required>
        </div>

        <!-- Experience -->
        <div class="mb-3">
          <label for="experience" class="form-label">Experience (years)</label>
          <input name="experience" type="number" class="form-control" id="experience">
        </div>

        <!-- Contact -->
        <div class="mb-3">
          <label for="contact" class="form-label">Contact</label>
          <input name="contact" type="text" class="form-control" id="contact" required>
        </div>

        <!-- Photo Upload -->
        <div class="mb-3">
          <label for="photoOfShop" class="form-label">Photo of Shop</label>
          <input name="photoOfShop" type="file" class="form-control" id="photoOfShop" required>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input name="password" type="password" class="form-control" id="password" required>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <!-- Add this line for login link -->
      <p class="mt-3">
        Already have an account? <a href="/loginForm">Login here</a>
      </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
