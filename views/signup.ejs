<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Signup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
        background: #f8f9fa;
      }
      .signup-card {
        max-width: 500px;
        margin: auto;
        margin-top: 50px;
        padding: 30px;
        border-radius: 15px;
        background: #fff;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      }
      .form-label {
        font-weight: 500;
      }
    </style>
  </head>
  <body>
    <div class="signup-card">
      <h2 class="mb-4 text-center">Create Your Account</h2>
      <form action="/auth/signup" method="post" enctype="multipart/form-data">
        
        <!-- Full Name -->
        <div class="mb-3">
          <label for="fullName" class="form-label">Full Name</label>
          <input name="name" type="text" class="form-control" id="fullName" placeholder="John Doe" required>
        </div>

        <!-- Username -->
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input name="username" type="text" class="form-control" id="username" placeholder="john123" required>
        </div>

        <!-- Contact -->
        <div class="mb-3">
          <label for="contact" class="form-label">Contact (Phone/Email)</label>
          <input name="contact" type="text" class="form-control" id="contact" placeholder="+91 9876543210 or email" required>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input name="password" type="password" class="form-control" id="password" placeholder="••••••••" required>
        </div>

        <hr class="my-4">

        <!-- Address -->
        <div class="mb-3">
          <label for="addressOfShop" class="form-label">Shop Address</label>
          <input name="addressOfShop" type="text" class="form-control" id="addressOfShop" placeholder="123 Main Street, City" required>
        </div>

        <!-- Experience -->
        <div class="mb-3">
          <label for="experience" class="form-label">Experience (years)</label>
          <input name="experience" type="number" class="form-control" id="experience" placeholder="5">
        </div>

        <!-- Photo Upload -->
        <div class="mb-3">
          <label for="photoOfShop" class="form-label">Photo of Shop</label>
          <input name="photoOfShop" type="file" class="form-control" id="photoOfShop" required>
        </div>

        <!-- Submit -->
        <div class="d-grid">
          <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
        </div>
      </form>

      <p class="mt-3 text-center">
        Already have an account? <a href="/loginForm">Login here</a>
      </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
