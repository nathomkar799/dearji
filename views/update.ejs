<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Update Customer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container mt-5">
      <h1>Update Customer</h1>
      <form action="/customer/<%= customer._id %>?_method=PUT" method="post">
        
        <!-- Name -->
        <div class="mb-3">
          <label class="form-label">Name</label>
          <input name="name" type="text" class="form-control" value="<%= customer.name %>" required>
        </div>

        <!-- Contact -->
        <div class="mb-3">
          <label class="form-label">Contact</label>
          <input name="contact" type="text" class="form-control" value="<%= customer.contact %>" required>
        </div>

        <!-- Measurements -->
        <div class="mb-3">
          <label class="form-label">Chest (cm)</label>
          <input name="chest" type="number" step="0.01" min="0" class="form-control" 
                 value="<%= customer.measurements.chest || '' %>" placeholder="e.g. 38.5">
        </div>

        <div class="mb-3">
          <label class="form-label">Waist (cm)</label>
          <input name="waist" type="number" step="0.01" min="0" class="form-control" 
                 value="<%= customer.measurements.waist || '' %>" placeholder="e.g. 32.75">
        </div>

        <div class="mb-3">
          <label class="form-label">Hips (cm)</label>
          <input name="hips" type="number" step="0.01" min="0" class="form-control" 
                 value="<%= customer.measurements.hips || '' %>" placeholder="e.g. 40.2">
        </div>

        <div class="mb-3">
          <label class="form-label">Shoulder (cm)</label>
          <input name="shoulder" type="number" step="0.01" min="0" class="form-control" 
                 value="<%= customer.measurements.shoulder || '' %>" placeholder="e.g. 18.4">
        </div>

        <div class="mb-3">
          <label class="form-label">Sleeve (cm)</label>
          <input name="sleeve" type="number" step="0.01" min="0" class="form-control" 
                 value="<%= customer.measurements.sleeve || '' %>" placeholder="e.g. 25.5">
        </div>

        <div class="mb-3">
          <label class="form-label">Inseam (cm)</label>
          <input name="inseam" type="number" step="0.01" min="0" class="form-control" 
                 value="<%= customer.measurements.inseam || '' %>" placeholder="e.g. 30.0">
        </div>

        <div class="mb-3">
          <label class="form-label">Neck (cm)</label>
          <input name="neck" type="number" step="0.01" min="0" class="form-control" 
                 value="<%= customer.measurements.neck || '' %>" placeholder="e.g. 15.75">
        </div>

        <!-- Remarks -->
        <div class="mb-3">
          <label class="form-label">Remarks</label>
          <textarea name="remarks" class="form-control" rows="3" 
                    placeholder="Any special notes..."><%= customer.remarks || '' %></textarea>
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
      </form>
    </div>
  </body>
</html>
