<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Customers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="mb-4 text-center">Customer Management</h1>

      <!-- âœ… Search Section -->
      <div class="row mb-4 align-items-center">
        <!-- Search -->
        <div class="col-md-8">
          <form action="/customer/search" method="get">
            <div class="input-group">
              <input name="contact" type="text" class="form-control form-control-lg" placeholder="Enter contact number" required>
              <button type="submit" class="btn btn-primary btn-lg">
                ğŸ” Search
              </button>
            </div>
          </form>
        </div>

        <!-- Add Customer -->
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
          <a href="/customer/addingCutomerDetailsForm" class="btn btn-success btn-lg w-100 w-md-auto">
            â• Add Customer
          </a>
        </div>
      </div>

      <!-- âœ… Search Result -->
      <% if (customer) { %>
        <div class="alert alert-success">
          <% if (updation) { %>
            <h4>âœ… Customer Updated:</h4>
          <% } else { %>
            <h4>âœ… Customer Found:</h4>
          <% } %>
          <p><strong>Name:</strong> <%= customer.name %></p>
          <p><strong>Contact:</strong> <%= customer.contact %></p>

          <!-- âœ… Measurements Table -->
          <h5 class="mt-4">Measurements:</h5>
          <table class="table table-bordered table-striped shadow-sm">
            <thead class="table-dark">
              <tr>
                <th>Measurement</th>
                <th>Value</th>
              </tr>
            </thead>
            <tbody>
              <% Object.keys(customer.measurements).forEach(key => { %>
                <tr>
                  <td><%= key %></td>
                  <td><%= customer.measurements[key] %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>

          <!-- âœ… Remarks Section -->
          <% if (customer.remarks) { %>
            <div class="mt-3 p-3 border rounded bg-light">
              <h5>ğŸ“ Remarks:</h5>
              <p><%= customer.remarks %></p>
            </div>
          <% } %>

          <a href="/customer/updateCustomerDetailForm/<%= customer._id %>" type="button" class="btn btn-warning mt-3">
            âœï¸ Update
          </a>
        </div>
      <% } else if (searched) { %>
        <div class="alert alert-danger">
          âŒ No customer found with this contact.
        </div>
      <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
